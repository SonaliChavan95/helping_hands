<div class="container col-lg-4">
  <h2 class="page_title">{{{title}}}}</h2>
  <form id="donor_profile_form">
    <div class="profile">
      <label for="Name">Name:</label>
      <input type="text" class="form-control" id="first=name" placeholder={{{firstName}}} name="name">
      <input type="text" class="form-control" id="last-name" placeholder={{{lastName}}} name="name">
      <label for="e-mail Address">e-mail Address:</label>
      <input type="text" class="form-contact" id="email" placeholder={{{email}}} name="email">
      <label for="gender">Gender:</label>
      <input type="text" class="form-control" id="gender" placeholder={{{gender}}} name="gender">
      <label for="phone">Phone:</label>
      <input type="text" class="form-contact" id="gender" placeholder={{{phone}}} name="phone">
    </div>
    <button type="submit" class="btn btn-primary">Modify Profile</button>
  </form>
  <h5 class="alert">*Optional</h5>
</div>